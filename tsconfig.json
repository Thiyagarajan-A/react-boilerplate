{
  "compilerOptions": {
    "baseUrl": "app",
    "outDir": "build/dist",
    "module": "esnext",
    "target": "es5",
    "lib": ["dom","es5","es6","es7","es2017","es2015"],
    "sourceMap": true,
    "allowJs": true,
    "jsx": "react",
    "moduleResolution": "node",
    "rootDir": "./",
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "exclude": [
    "node_modules",
    "build",
    "scripts",
    "acceptance-tests",
    "webpack",
    "jest",
    "internals"
  ]
}
